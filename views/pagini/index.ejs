<script>
  $(document).ready(function() {
    let offerHolder = $('#offer');

    if (offerHolder.length > 0) {
      let expiryDate = new Date(offerHolder.data('expiry'));
      let timerElement = $('#timer');

      function updateTimer() {
        let now = new Date();
        let distance = expiryDate - now;

        let hours = Math.floor(distance / (1000 * 60 * 60));
        let minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        let seconds = Math.floor((distance % (1000 * 60)) / 1000);

        let output = '';
        if (hours > 0) {
          output += hours + ' ore ';
        }

        output += minutes + ' minute ' + seconds + ' secunde ';

        timerElement.html(output);

        // Ultimele 10 secunde
        if (distance < 10000) {
          timerElement.css('color', 'orange');
        }

        if (distance < 0) {
          clearInterval(interval);
          offerHolder.fadeOut();
        }
      }

      updateTimer();
      let interval = setInterval(updateTimer, 1000);
    }
  });
</script>

